{
    "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],
    "redirects": [
        {
            "source": "/old-page",
            "destination": "/new-page",
            "permanent": true
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
